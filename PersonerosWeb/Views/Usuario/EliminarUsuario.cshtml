@using PersonerosWeb.Models;
@model Usuario
@{
    Layout = null;
}

@using(Html.BeginForm("EliminarUsuario", "Usuario", FormMethod.Post)) {
    @Html.HiddenFor(m => m.idUsuario)
    <div class="card">
        <div class="card-body">
            <p>¿Seguro que deseas eliminar el usuario <span class="fw-bold">@Model.nombreUsuario</span> de <span class="fw-bold">@Model.persona.nombres.Split(' ')[0] @Model.persona.apellidoPaterno</span> con el tipo de usuario <span class="fw-bold">@Model.tipoUsuario.nombre</span>?</p>
            <p class="fst-italic">*Se borrarán todos los datos asociados al tipo de usuario.</p>
            <div class="row">
                <div class="col d-grid">
                    <button data-bs-dismiss="modal" type="submit" class="btn btn-primary btn-lg">Sí</button>
                </div>
                <div class="col d-grid">
                    <a data-bs-dismiss="modal" class="btn btn-danger btn-lg">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
}