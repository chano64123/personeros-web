@using PersonerosWeb.Models;
@using PersonerosWeb.Resourses;
@model TipoUsuario
@{
    ViewBag.Title = (Model.idTipoUsuario > 0 ? "Editar" : "Agregar") + " Tipo de Usuario";
    Layout = null;
}

@using(Html.BeginForm("GuardarTipoUsuario", "TipoUsuario", FormMethod.Post, new { @class = "needs-validation", @novalidate = "novalidate" })) {
    @Html.HiddenFor(m => m.idTipoUsuario)
    <div class="card">
        <div class="card-body">
            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.nombre, null, new { @class = "form-control", @placeholder = "Nombre", @required = "required", @maxlength = "50" })
                @Html.LabelFor(model => model.nombre)
                <div class="invalid-feedback">Algo está mal!</div>
                @Html.ValidationMessageFor(model => model.nombre, null, new { @class = "text-danger" })
            </div>
            <div class="form-floating mb-3">
                @if(Model.idTipoUsuario > 0) {
                    @Html.HiddenFor(model => model.identificador)
                } else {
                    @Html.TextBoxFor(model => model.identificador, new { @class = "form-control", @placeholder = "Identificador", @type = "tel", @pattern = "[0-9]+", @onkeypress = "return valideKeyNumber(event);", @required = "required", @max = "999" })
                    @Html.LabelFor(model => model.identificador)
                    <div class="invalid-feedback">Algo está mal!</div>
                    @Html.ValidationMessageFor(model => model.identificador, null, new { @class = "text-danger" })
                }
            </div>
            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.nivelAcceso, new { @class = "form-control", @placeholder = "Nivel de Acceso", @type = "tel", @pattern = "[0-9]+", @onkeypress = "return valideKeyNumber(event);", @required = "required", @max = "999" })
                @Html.LabelFor(model => model.nivelAcceso)
                <div class="invalid-feedback">Algo está mal!</div>
                @Html.ValidationMessageFor(model => model.nivelAcceso, null, new { @class = "text-danger" })
            </div>
            <div class="row">
                <div class="col d-grid">
                    <button @*data-bs-dismiss="modal"*@ type="submit" class="btn btn-primary btn-lg">Guardar</button>
                </div>
                <div class="col d-grid">
                    <a data-bs-dismiss="modal" class="btn btn-danger btn-lg">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/Assets/js/validation/validation.bootstrap.js"></script>
