@using PersonerosWeb.Models;
@using PersonerosWeb.Resourses;
@model IEnumerable<IGrouping<string, Institucion>>
@*@model List<Institucion>*@
@{
    ViewBag.Title = "Instituciones";

    ViewBag.messageAlert = Session["messageAlert"];
    ViewBag.titleAlert = Session["titleAlert"];
    ViewBag.iconAlert = Session["iconAlert"];
}

<div class="row mt-3">
    <div class="col text-black">
        <h2 class="text-center">@ViewBag.Title</h2>
        <hr />
    </div>
</div>

<button class="btn btn-secondary btn-lg" id="btnAgregarInstitucion" type="button" data-bs-title="Agregar Institucion" data-bs-target="#modalInstitucion" data-bs-toggle="modal">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
    </svg>
    @Agregar.institucion
</button>

<div class="row">
    @foreach(var distrito in Model) {
        <div class="rounded-3 border border-secondary m-3 p-2 bg-light">
            <div class="col-12 table-responsive mx-auto">
                <h3 class="col mt-3 text-center fw-bold">@distrito.Key</h3>
                <table id="table1" class="display table table-striped align-middle">
                    <caption>Instituciones del distrito de @distrito.Key</caption>
                    <thead style="text-align: center;">
                        <tr>
                            <th scope="col">N°</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Dirección</th>
                            <th scope="col">Cantidad Mesas</th>
                            <th scope="col">Cantidad Electores</th>
                            <th scope="col">Acción</th>
                        </tr>
                    </thead>
                    <tbody style="vertical-align:middle; text-align: center;">
                        @{int i = 1;}
                        @foreach(var institucion in distrito) {
                            <tr>
                                <td>@i</td>
                                <td>@institucion.nombre</td>
                                <td>@institucion.direccion</td>
                                <td>@institucion.cantidadMesas</td>
                                <td>@institucion.cantidadElectores</td>
                                <td>
                                    <button class="btn btn-primary btnDetalleInstitucion" type="button" data-id="@institucion.idInstitucion" data-bs-title="Detalle del Institución" data-bs-target="#modalInstitucion" data-bs-toggle="modal">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                                            <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z" />
                                            <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z" />
                                        </svg>
                                    </button>
                                    <button class="btn btn-success btnModificarInstitucion" type="button" data-id="@institucion.idInstitucion" data-bs-title="Actualizar Institución" data-bs-target="#modalInstitucion" data-bs-toggle="modal">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                        </svg>
                                    </button>
                                    <button class="btn btn-danger btnEliminarInstitucion" type="button" data-id="@institucion.idInstitucion" data-bs-title="Eliminar Institución" data-bs-target="#modalInstitucion" data-bs-toggle="modal">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                        </svg>
                                    </button>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="modalInstitucion" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCourseTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="modalInstitucionContenido"></div>@* Contenido del Modal *@
            </div>
        </div>
    </div>
</div>
<script src="~/Assets/js/models/institucion.js"></script>
<script type="text/javascript">

    let titulo = "@ViewBag.titleAlert";
    let mensaje = "@ViewBag.messageAlert";
    let tipo = "@ViewBag.iconAlert";

    function mostrar() {
        Swal.fire(titulo, mensaje, tipo)
    }

    function limpiar() {
        @{
            Session["titleAlert"] = "";
            Session["messageAlert"] = "";
            Session["iconAlert"] = "";
            ViewBag.titleAlert = "";
            ViewBag.messageAlert = "";
            ViewBag.iconAlert = "";
        }
        titulo = ""
        mensaje = ""
        tipo = ""
    }

    if (titulo != "") {
        mostrar()
        limpiar()
    }
</script>