@using PersonerosWeb.Models;
@model Distrito
@{
    Layout = null;
}

@using(Html.BeginForm("EliminarDistrito", "Distrito", FormMethod.Post)) {
    @Html.HiddenFor(m => m.idDistrito)
    <div class="card">
        <div class="card-body">
            <p>¿Seguro que deseas eliminar el distrito <span class="fw-bold">@Model.nombre</span>?</p>
            <p class="fst-italic">*Se borrarán todos los datos asociados al distrito.</p>
            <div class="row">
                <div class="col d-grid">
                    <button data-bs-dismiss="modal" type="submit" class="btn btn-primary btn-lg">Sí</button>
                </div>
                <div class="col d-grid">
                    <a data-bs-dismiss="modal" class="btn btn-danger btn-lg">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
}