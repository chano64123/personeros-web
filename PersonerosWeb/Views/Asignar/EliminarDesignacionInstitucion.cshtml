@using PersonerosWeb.Models;
@model DesignacionInstitucion
@{
    Layout = null;
}

@using(Html.BeginForm("EliminarDesignacionInstitucion", "Asignar", FormMethod.Post)) {
    @Html.HiddenFor(m => m.idDesignacionInstitucion)
    <div class="card">
        <div class="card-body">
            <p>¿Seguro que deseas eliminar la designacion de <span class="fw-bold">@Model.usuario.persona.nombres.Split(' ')[0] @Model.usuario.persona.apellidoPaterno</span> a la institución <span class="fw-bold">@Model.institucion.nombre</span>?</p>
            <p class="fst-italic">*Se borrarán todos los datos asociados a la asignación.</p>
            <div class="row">
                <div class="col d-grid">
                    <button data-bs-dismiss="modal" type="submit" class="btn btn-primary btn-lg">Sí</button>
                </div>
                <div class="col d-grid">
                    <a data-bs-dismiss="modal" class="btn btn-danger btn-lg">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
}