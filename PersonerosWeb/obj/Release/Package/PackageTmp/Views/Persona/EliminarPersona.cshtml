@using PersonerosWeb.Models;
@model Persona
@{
    Layout = null;
}

@using(Html.BeginForm("EliminarPersona", "Persona", FormMethod.Post)) {
    @Html.HiddenFor(m => m.idPersona)
    <div class="card">
        <div class="card-body">
            <p>¿Seguro que deseas eliminar a la persona <span class="fw-bold">@Model.nombres.Split(' ')[0] @Model.apellidoPaterno</span>?</p>
            <p class="fst-italic">*Se borrarán todos los datos asociados a la persona.</p>
            <div class="row">
                <div class="col d-grid">
                    <button data-bs-dismiss="modal" type="submit" class="btn btn-primary btn-lg">Sí</button>
                </div>
                <div class="col d-grid">
                    <a data-bs-dismiss="modal" class="btn btn-danger btn-lg">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
}