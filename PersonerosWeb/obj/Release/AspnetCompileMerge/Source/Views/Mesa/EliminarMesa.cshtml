@using PersonerosWeb.Models;
@model Mesa
@{
    Layout = null;
}

@using(Html.BeginForm("EliminarMesa", "Mesa", FormMethod.Post)) {
    @Html.HiddenFor(m => m.idMesa)
    <div class="card">
        <div class="card-body">
            <p>¿Seguro que deseas eliminar la mesa <span class="fw-bold">@Model.numero</span> de la institución <span class="fw-bold">@Model.institucion.nombre</span>?</p>
            <p class="fst-italic">*Se borrarán todos los datos asociados a la mesa.</p>
            <div class="row">
                <div class="col d-grid">
                    <button data-bs-dismiss="modal" type="submit" class="btn btn-primary btn-lg">Sí</button>
                </div>
                <div class="col d-grid">
                    <a data-bs-dismiss="modal" class="btn btn-danger btn-lg">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
}